{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <table>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Date de publication</th>
            <th>Author</th>
            <th>Published</th>
                <th>Actions</th>
        </tr>
        {% for b in books %}
            <tr>
                <td>{{ b.title }}</td>
                <td>{{b.category}}</td>
                <td>{{b.datePublication|date}}</td>
                <td>{{b.idAuthor.username}}</td>
                <td>{{b.published}}</td>
                <td><a href={{path('app_book_update',{'id':b.id})}}>Update</a></td>
                <td><a href={{path('app_book_delete',{'id':b.id})}}>Delete</a></td>
            </tr>

    {% endfor  %}
   </table>
</div>
{% endblock %}
